	#virtual_class .menu{
		margin-top:60px;
		margin-left:100px;
		width:70%;
		height:30px;
		padding:4px;
		background-color:#4444ff;
		box-shadow : 2px 2px 3px 0px #aaa;
		box-redius : 6px;
	}
	
	#virtual_class .menu li{
		list-style:none;
		float:left;
		width:90px;
		height:23px;
		color:#fff;
		text-align:center;
		border-radius: 6px;
	}
	
	#virtual_class .menu li:hover{
		color:#4444ff;
		background-color:#fff;
	}
	
	#virtual_class .menu li:nth-child(2){
		color:#ffff00;
	}
	
	#virtual_class .menu li:first-child{
		color:#ff0000;
	}
	
	#virtual_class .menu li:last-child{
		color:#ff0000;
	}
</style>
